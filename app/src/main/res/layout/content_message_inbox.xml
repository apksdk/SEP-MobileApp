<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.riversidecorps.rebuy.AccountManagement.MessageInboxActivity"
    tools:showIn="@layout/app_bar_message_inbox">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mailReadStatusIV"
            android:layout_marginRight="8dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@android:drawable/sym_action_email" />

        <TextView
            android:id="@+id/messageTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mailReadStatusIV"
            android:text="Message Title" />

        <TextView
            android:id="@+id/messageAuthorTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageTitleTV"
            android:layout_toRightOf="@+id/mailReadStatusIV"
            android:text="From: sellerID" />

        <TextView
            android:id="@+id/messagePreviewTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageAuthorTV"
            android:layout_toRightOf="@+id/mailReadStatusIV"
            android:text="Message Preview" />

        <TextView
            android:id="@+id/messageDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="8/27/2017 4:12PM" />

    </RelativeLayout>

</RelativeLayout>
