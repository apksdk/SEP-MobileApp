<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.riversidecorps.rebuy.OffersActivity"
    tools:showIn="@layout/app_bar_offers">
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/itemImagePreviewIV"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@android:drawable/ic_menu_camera"/>
        <TextView
            android:id="@+id/itemNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/itemImagePreviewIV"
            android:text="Example Item #1" />
        <TextView
            android:id="@+id/itemOriginalPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemNameTV"
            android:layout_toRightOf="@+id/itemImagePreviewIV"
            android:text="Listed Price: $4.99" />
        <EditText
            android:id="@+id/itemOfferPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemOriginalPriceTV"
            android:layout_toRightOf="@+id/itemImagePreviewIV"
            android:hint="Offering Price" />
        <TextView
            android:id="@+id/itemOfferMessagePreviewTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemOfferPriceTV"
            android:layout_toRightOf="@+id/itemImagePreviewIV"
            android:text="Buyer's Message Preview" />
        <TextView
            android:id="@+id/offerAuthorTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="From: buyerID" />
    </RelativeLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Make offer"
        android:id="@+id/makeOfferBtn"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/recyclerView"
        android:layout_toEndOf="@+id/recyclerView"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp" />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelBtn"
        android:layout_alignBaseline="@+id/makeOfferBtn"
        android:layout_alignBottom="@+id/makeOfferBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp" />
</RelativeLayout>
