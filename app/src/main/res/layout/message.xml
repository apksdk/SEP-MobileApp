<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:orientation="vertical">

    <com.riversidecorps.rebuy.SlidingMenu
        android:id="@+id/slidingMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--     <LinearLayout
                     android:id="@+id/content"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     >-->
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECEFF1">

                <ImageView
                    android:id="@+id/mailReadStatusIV"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="8dp"
                    />

                <TextView
                    android:id="@+id/messageTitleTV_Pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mailReadStatusIV"
                    android:text="Item: " />

                <TextView
                    android:id="@+id/messageTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/messageTitleTV_Pre" />

                <TextView
                    android:id="@+id/messageAuthorTV_Pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messageTitleTV"
                    android:layout_toRightOf="@+id/mailReadStatusIV"
                    android:text="Sender: " />

                <TextView
                    android:id="@+id/messageAuthorTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messageTitleTV"
                    android:layout_toRightOf="@+id/messageAuthorTV_Pre" />

                <TextView
                    android:id="@+id/messagePreviewTV_Pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messageAuthorTV"
                    android:layout_toRightOf="@+id/mailReadStatusIV"
                    android:text="Content: " />

                <TextView
                    android:id="@+id/messagePreviewTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messageAuthorTV"
                    android:layout_toRightOf="@+id/messagePreviewTV_Pre" />

                <TextView
                    android:id="@+id/messageDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/messagePreviewTV"
                    android:layout_marginRight="5dp"
                  />

            </RelativeLayout>
            <!--     </LinearLayout>-->

            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reply_message"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/delete_message"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_dark_background"
                    android:gravity="center"
                    android:text="Delete"
                    android:textColor="#fff" />

            </LinearLayout>


        </LinearLayout>


    </com.riversidecorps.rebuy.SlidingMenu>


</LinearLayout>